class Todo {
  final String id;
  final String title;
  final DateTime dueDate;
  final String category;
  Todo({required this.id, required this.title, required this.dueDate, required this.category});
  factory Todo.fromFirestore(Map<String, dynamic> data) {
    return Todo(
      id: data['id'],
      title: data['title'],
      dueDate: data['dueDate'].toDate(),
      category: data['category'],
    );
  }
}
